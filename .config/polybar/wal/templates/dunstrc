    icon_path = /usr/share/icons/ePapirus/16x16/actions:/usr/share/icons/Adwaita/16x16/status/:/usr/share/icons/Adwaita/16x16/devices/:/usr/share/icons/Adwaita/16x16/legacy/
    
[shortcuts]
